<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sing.DuetActivity">

    <LinearLayout
        android:background="#566270"
        android:id="@+id/linear"
        android:layout_marginBottom="-30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageButton
            android:id="@+id/activity_before_sing_btn_close"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_close_24_white"
            android:scaleType="fitXY"
            android:layout_margin="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/activity_before_sing_tv_title"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:text="그대라는 사치"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/activity_before_sing_tv_singer"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:text="한동근"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_below="@+id/linear"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginLeft="125dp"
        android:background="@drawable/button_shqpe_purple"
        app:cardCornerRadius="45dp">

        <ImageView
            android:id="@+id/activity_before_sing_iv_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"

            />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_below="@+id/linear"
        android:layout_toEndOf="@+id/cardView1"
        android:layout_width="76dp"
        android:layout_height="76dp"
       android:layout_marginLeft="5dp"
        android:background="@drawable/button_shape"
        app:cardCornerRadius="45dp">

        <ImageView
            android:id="@+id/activity_before_sing_iv_me"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"

            />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_centerInParent="true"
        android:layout_below="@+id/cardView2"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/activity_duet_tv_user_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/arrow"
            android:textSize="16sp"
            android:textColor="@color/purple"
            android:text="닉네임" />

        <TextView
            android:id="@+id/tv_duet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/arrow"
            android:textSize="16sp"
            android:layout_toEndOf="@+id/activity_duet_tv_user_nickname"
            android:text="님과의 듀엣" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_before_sing_btn_video"
        android:layout_width="95dp"
        android:layout_height="80dp"
        android:layout_below="@+id/linear3"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/button_record_select"
        android:drawableTop="@drawable/ic_baseline_videocam_24"
        android:drawableTint="@color/black"
        android:paddingTop="12dp"
        android:text="녹화" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_before_sing_btn_voice"
        android:layout_width="95dp"
        android:layout_height="80dp"
        android:layout_below="@+id/linear3"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="72dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/activity_before_sing_btn_video"
        android:background="@drawable/button_record"
        android:drawableTop="@drawable/ic_baseline_voicemail_24"
        android:drawableTint="@color/black"
        android:paddingTop="12dp"
        android:text="녹음" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_before_sing_btn_start"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="150dp"
        android:background="@drawable/button_record"
        android:backgroundTint="@color/purple"
        android:text="부르기"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>